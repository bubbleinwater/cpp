exercise 3.

#include"std_lib_facilities.h"

class bad_temperature{};

double ctok(double c)
{
	double k = c + 273.15;
	return k;
}

int main()
try{
	double c = 0;
	cin >> c;
	if (c < -273.15)throw bad_temperature();
	double k = ctok(c);
	cout << k << '\n';

	keep_window_open();
	return 0;
}
catch (bad_temperature) {
	error("bad temp");

	keep_window_open();
	return 1;
}

