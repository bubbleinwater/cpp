P95 円、ユーロ、ポンドをドルに変換するプログラム。

#include "std_lib_facilities.h"

int main()
{
	double money = 0;
	char unit = ' ';
	constexpr double dollar_per_yen = 0.00914;
	constexpr double dollar_per_euro = 1.2431;
	constexpr double dollar_per_pound = 1.4229;
	cout << "円、ユーロ、もしくはポンド単位のお金を入力し"
		<<"単位(y,e,pのいずれか)をそれに続けてください。\n";
	cin >> money >> unit;

	if (unit == 'y')
		cout << money << "円は" << money * dollar_per_yen << "ドルです。\n";
	else if (unit == 'e')
		cout << money << "ユーロは" << money * dollar_per_euro << "ドルです。\n";
	else if (unit == 'p')
		cout << money << "ポンドは" << money * dollar_per_pound << "ドルです。\n";
	else
		cout << "Sorry I don't know a unit called " << unit << ".\n";

	keep_window_open();
	return 0;
}


switchに書き換える

#include "std_lib_facilities.h"

int main()
{
	double money = 0;
	char unit = ' ';
	constexpr double dollar_per_yen = 0.00914;
	constexpr double dollar_per_euro = 1.2431;
	constexpr double dollar_per_pound = 1.4229;
	constexpr double dollar_per_yuan = 0.15805;
	constexpr double dollar_per_krone = 0.16645;
	cout << "円、ユーロ、もしくはポンド単位のお金を入力し"
		<<"単位(y,e,p,c,kのいずれか)をそれに続けてください。\n";
	cin >> money >> unit;
	
	switch (unit) {
	case 'y':
		cout << money << "円は" << money * dollar_per_yen << "ドルです。\n";
		break;
	case 'e':
		cout << money << "ユーロは" << money * dollar_per_euro << "ドルです。\n";
		break;
	case 'p':
		cout << money << "ポンドは" << money * dollar_per_pound << "ドルです。\n";
		break;
	case 'c':
			cout<< money << "元は" << money * dollar_per_yuan << "ドルです。\n";
			break;
	case 'k':
		cout << money << "クローネは" << money * dollar_per_krone << "ドルです。\n";
		break;
	default:
		cout << ":Sorry, I don't know a unit called "<<unit<<".\n";
		break;
	}
	
	keep_window_open();
	return 0;
}

P101　charとそれを代入したintを出力するプログラム

#include "std_lib_facilities.h"

int main() {
	char ch = 'a';
	int count = ch;
	int i = 0;

	while (i < 26) {
		cout << ch << '\t' << count<<'\n';
		++count;
		ch = count;
		++i;
	}

	keep_window_open();
	return 0;
}


#include "../../std_lib_facilities.h"

int main() {
	char ch = 'a';
	int count = ch;
	for (int i = 0; i < 26;++i) {
		cout << ch << '\t' << count<<'\n';
		++count;
		ch = count;
	}

	keep_window_open();
	return 0;
}

with ABC and 123

#include "../../std_lib_facilities.h"

int main()
{
	char a = 'a';
	for (int aa = 97; aa <= 122; ++aa) {
		a = aa;
		cout << a << '\t' << aa << '\n';
	}
	cout << '\n';
	for (int AA = 65; AA <= 90; ++AA) {
		a = AA;
		cout << a << '\t' << AA << '\n';
	}
	cout << '\n';
	for (int digit = 49; digit <= 57; ++digit) {
		a = digit;
		cout << a << '\t' << digit << '\n';
	}
	//
	//char A = 'A';
	//int AA = A;
	//cout << "Ais" << AA << '\n';
	//char a1 = '9';
	//int aa1 = a1;
	//cout << aa1 << '\n';

	return 0;
}

p104

#include "std_lib_facilities.h"

int square(int x) {
	int result = 0;
	for (int i = 0; i < x; ++i)	result += x;

	return result;
}

int main() {
	int val;
	cout << "2乗したい整数値を入力してください。\n";
	cin >> val;

	cout <<val<<"を2乗すると"<< square(val)<<"です。\n";

	keep_window_open();
	return 0;
}


P 115 bleep //without vector

#include "std_lib_facilities.h"
#include <Windows.h>

int main()
{
	string disliked = "Broccoli";

	cout << "単語を入力してください。\n";
	string liked_only;
	while (cin >> liked_only)
		if (liked_only != disliked)
			cout << "I like " << liked_only << '\n';
		else {
			cout << "I don't like " << "B**EE***E**P\n";
			Beep(440, 2000);
		}
	
	keep_window_open();
	return 0;
}

//with vector

#include "std_lib_facilities.h"
#include <Windows.h>

int main()
{
	string disliked = "Broccoli";
	vector<string> words;

	cout << "単語をスペースで区切り入力してください。\n";
	for (string liked; cin >> liked;)
		words.push_back(liked);

	sort(words);

	for (string x : words)
		if (x != disliked)
			cout <<"I like "<< x << '\n';
		else
		{
			cout <<"I don't like B**EE*E**P\n";
			Beep(440, 400);
}

	keep_window_open();
	return 0;
}